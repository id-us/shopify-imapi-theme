{%- liquid
  if settings.dir == 'ltr'
    assign dir = 'ltr'
  else
    assign dir = 'rtl'
  endif
-%}

.totals {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.totals > * {
  font-size: 1.6rem;
  margin: 0;
}

.totals > h2 {
  font-size: calc(var(--font-heading-scale) * 1.6rem);
}

.totals * {
  line-height: 1;
}

.totals > * + * {
  {% if dir == 'ltr' %}
    margin-left: 2rem;
  {% else %}  
    margin-right: 2rem;
  {% endif %}
}

.totals__total {
  margin-top: .5rem;
}

.totals__total-value {
  font-size: 1.8rem;
}

.cart__ctas + .totals {
  margin-top: 2rem;
}

@media all and (min-width: 750px) {
  .totals {
    {% if dir == 'ltr' %}
      justify-content: flex-end;
    {% else %}  
      justify-content: flex-start;
    {% endif %}
  }
}
